doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    style.
      #img1 {
      float:right;
      margin-top:-15px;
      width:300px;
      vertical-align:top;
      }
      #div1{
      margin-left: -15px;
      }
      body{
      padding-top: 60px;
      background-image: url(https://themighty.com/wp-content/uploads/2016/06/Cinema-Seats_1280x640_acf_cropped.jpg);
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-attachment: fixed;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      }
      .navbar-fixed-top{
      text-decoration-color: rgb(500,500,500);
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: rgba(50,0,0,.66);
      }
      .navbar-brand{
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      }
      li a {
      background-color: rgba(200,200,200,0);
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      }
      #tbl1{
      text-decoration-color: rgba(500,500,500);
      margin: 0;
      padding: 0;
      overflow-x: auto;
      background-color: rgba(500,500,500,.3);
      border: 1px solid white;
      height: 50%;
      }
      #tbl1-brand{
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      }
  body
    // Nav Bar Starts
    div
      nav.navbar-fixed-top
        .container-fluid
          .navbar-header
            a.navbar-brand(href='/signedhome') Movie Meetup
          ul.nav.navbar-nav
            li.active
              a(href='/signedhome') Home
            li
              a(href='/friends') Friends
            li
              a(href='/groups') Groups
            li
              a(href='/moviepage')
                | My Movies 
                span.glyphicon.glyphicon-film
            li
              a(href='/aboutus') About Us
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#')
                span.glyphicon.glyphicon-user
                |  My Account
            li
              a(href='/')
                span.glyphicon.glyphicon-login
                |  Sign Out
    // Nav Bar Ends
    .container
      .jumbotron(style='background-color: rgba(300, 300, 300, 0.5)')
        img#img1(src='Posters/Logo.jpeg', alt='Website Logo')
        h1(style='opacity: 1') Movie Meetup
        h3
          | A movie with your friends, without all the hastle.  
          br
          |     Find friends and invite them to the movies
      // Carousel Starts Here
      #div1.container
        .row
          .col-sm-12
            #home_carousel.carousel.slide(data-ride='carousel')
              // indicators dot nav
              ol.carousel-indicators
                li(data-target='#home_carousel', data-slide-to='0')
                li(data-target='#home_carousel', data-slide-to='1')
                li(data-target='#home_carousel', data-slide-to='2')
                li(data-target='#home_carousel', data-slide-to='3')
                li(data-target='#home_carousel', data-slide-to='4')
              // wrapper for slides
              .carousel-inner(role='listbox')
                .item.active
                  a(href='##')
                    img(src='http://hdqwalls.com/download/2016-the-legend-of-tarzan-ap-2048x1152.jpg', alt='The Legend of Tarzan')
                  .carousel-caption
                    h1
                      | The Legend 
                      br
                      | of Tarzan
                .item
                  a(href='WonderWoman.html')
                    img(src='http://hdqwalls.com/download/wonder-woman-2017-poster-img-2048x1152.jpg', alt='Wonder Woman')
                  .carousel-caption
                    h1
                      | Wonder
                      br
                      | Woman
                .item
                  a(href='##')
                    img(src='http://hdqwalls.com/download/assassins-creed-movie-4k-qu-2048x1152.jpg', alt="Assassin's Creed")
                  .carousel-caption
                    h1
                      | Assassin's
                      br
                      | Creed
                .item
                  a(href='##')
                    img(src='https://images2.alphacoders.com/837/837434.jpg', alt='Spiderman:Homecoming')
                  .carousel-caption
                    h1
                      | Spiderman:
                      br
                      | Homecoming
                .item
                  a(href='##')
                    img(src='http://www.awardsdaily.com/wp-content/uploads/2017/06/apes.jpg', alt='War for the Planet of the Apes')
                  .carousel-caption
                    h1
                      | War for 
                      br
                      |  the Planet 
                      br
                      |  of the Apes
              // controls buttons
              a.left.carousel-control(href='#home_carousel', role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')  
              a.right.carousel-control(href='#home_carousel', role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')  
              br
              br
              br
              br
              br
              // jQuery (necessary for Bootstrap's JavaScript plugins)
              script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
              script(src='js/bootstrap.min.js')
